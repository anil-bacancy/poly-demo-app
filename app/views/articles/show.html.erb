<p id="notice"><%= notice %></p>
<p><%= @article.likes.count %> <%= (@article.likes.count) == 1 ? 'Like' : 'Likes'%></p>
<% pre_like = @article.likes.find { |like| like.user_id == current_user.id} %>
<% if pre_like %>
  <%= button_to 'Unlike', article_like_path(@article, pre_like), method: :delete, remote: :true %>
<% else %>
  <%= button_to 'Like', article_likes_path(@article), method: :post, remote: :true %>
<% end %>
<p>
  <strong>Name:</strong>
  <%= @article.name %>
</p>

<p>
  <strong>Content:</strong>
  <%= raw(@article.content) %>
</p>

<h2>Comments</h2>
<% if @article.comments.present? %>
	<%= render "comments/comments" %>
<% else %>
	<%= render "comments/form" %>
<% end %>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>